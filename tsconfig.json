{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": [ "esnext" ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "lib",
    "rewriteRelativeImportExtensions": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src"]
}
